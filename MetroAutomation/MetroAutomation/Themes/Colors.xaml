<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <SolidColorBrush x:Key="BrushIdle" Color="{StaticResource MahApps.Colors.Gray}" />
    <SolidColorBrush x:Key="BrushFail" Color="{StaticResource MahApps.Colors.SystemErrorText}" />
    <SolidColorBrush x:Key="BrushSuccess" Color="{StaticResource MahApps.Colors.AccentBase}" />
    <SolidColorBrush x:Key="BrushWarn" Color="#FF817600" />
</ResourceDictionary>