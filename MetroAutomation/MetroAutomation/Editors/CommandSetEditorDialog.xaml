<local:BaseEditorDialog x:Class="MetroAutomation.Editors.CommandSetEditorDialog"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                        xmlns:local="clr-namespace:MetroAutomation.Editors"
                        xmlns:controls="clr-namespace:MetroAutomation.Controls"
                        xmlns:viewmodel="clr-namespace:MetroAutomation.ViewModel"
                        DataContext="{Binding RelativeSource={RelativeSource Self}}"
                        mc:Ignorable="d"
                        Height="600" Width="800"
                        Title="Редактор набора команд">
    <Grid Margin="4 4 0 0">
        <Grid.Resources>
            <viewmodel:EnumExtendedDescriptionConverter x:Key="ExtendedDescription" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition MinHeight="200" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <DockPanel>
                <Label DockPanel.Dock="Left" Content="Название" />
                <TextBox DockPanel.Dock="Right" Text="{Binding Item.Name}" />
            </DockPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Подключение" />
                <TextBox Grid.Column="1" Text="{Binding Item.ConnectCommand}" />
                <Label Grid.Column="2" Content="Откючение" />
                <TextBox Grid.Column="3" Text="{Binding Item.DisconnectCommand}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Включение выхода" />
                <TextBox Grid.Column="1" Text="{Binding Item.OutputOnCommand}" />
                <Label Grid.Column="2" Content="Отключение выхода" />
                <TextBox Grid.Column="3" Text="{Binding Item.OutputOffCommand}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <CheckBox Content="Ожидание ответа" IsChecked="{Binding Item.WaitForActionResponse}" />
                <Label Grid.Column="1" Content="Успешное выполнение команды" />
                <TextBox Grid.Column="2" Text="{Binding Item.ActionSuccess}" IsEnabled="{Binding Item.WaitForActionResponse}" />
                <Label Grid.Column="3" Content="Неуспешное выполнение команды" />
                <TextBox Grid.Column="4" Text="{Binding Item.ActionFail}" IsEnabled="{Binding Item.WaitForActionResponse}" />
            </Grid>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <DataGrid ItemsSource="{Binding Item.UnitNames}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Единица" Binding="{Binding Value, Converter={StaticResource ExtendedDescription}, ConverterParameter='Full'}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Текст" Binding="{Binding Text}" />
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid Grid.Column="1" ItemsSource="{Binding Item.UnitModifiers}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Приставка СИ" Binding="{Binding Value, Converter={StaticResource ExtendedDescription}, ConverterParameter='Full'}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Текст" Binding="{Binding Text}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <DataGrid Grid.Row="2" ItemsSource="{Binding Item.FunctionCommands}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Режим" Binding="{Binding Mode, Converter={StaticResource ExtendedDescription}, ConverterParameter='Full'}" IsReadOnly="True" />
                <DataGridTextColumn Header="Задать режим" Binding="{Binding FunctionCommand}" />
                <DataGridTextColumn Header="Задать диапазон" Binding="{Binding RangeCommand}" />
                <DataGridTextColumn Header="Задать значние" Binding="{Binding ValueCommand}" />
            </DataGrid.Columns>
        </DataGrid>
        <controls:OkCancelButtons Grid.Row="3" HorizontalAlignment="Right" OkCommand="{Binding OkCommand}" CancelCommand="{Binding CancelCommand}" />
    </Grid>
</local:BaseEditorDialog>
