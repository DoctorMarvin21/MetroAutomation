<mah:MetroWindow x:Class="MetroAutomation.DeviceLogWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:MetroAutomation"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 DataContext="{Binding RelativeSource={RelativeSource Self}}"
                 mc:Ignorable="d"
                 Title="Логи приборов" Height="450" Width="800">
    <DataGrid x:Name="LogsGrid" ItemsSource="{Binding ConnectionManager.Logs}" IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Type}" />
            <DataGridTextColumn Binding="{Binding Device.Configuration.Name}"  />
            <DataGridTextColumn Binding="{Binding Text}" />
        </DataGrid.Columns>
    </DataGrid>
</mah:MetroWindow>
